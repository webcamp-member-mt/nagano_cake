<div class="container">
  <h3>商品一覧(<%= @items_count %>件)</h3>
  <div class="row">
      <% @items.each do |item| %>
      <div class="my-5 col-md-3">
          <div class="d-flex justify-content-center">
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_item_image %>
            <% end %>
          </div>
          <div class="d-flex justify-content-center">
          <%= item.name %>
          </div>
          <div class="d-flex justify-content-center">
           ¥<%= item.add_tax_price.to_s(:delimited) %>
          </div>
      </div>
      <% end %>
  </div>
  <div class="d-flex justify-content-center">
   <%= paginate @items %>
  </div>
</div>
