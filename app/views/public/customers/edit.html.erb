<h2>会員情報編集</h2>
<%= form_with model: @customer_show, url: customers_information_path do |f| %>
<div>
  <p>氏名</p>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
</div>
<div>
  <p>フリガナ</p>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
</div>
<div>
  <p>郵便番号</p>
    <%= f.number_field :postal_code %>
</div>
<div>
  <p>住所</p>
    <%= f.text_field :address %>円
</div>
<div>
  <p>電話番号</p>
    <%= f.number_field :telephone_number %>
</div>
<div>
  <p>メールアドレス</p>
    <%= f.email_field :email %>
</div>

  <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
<% end %>
<%= link_to "退会する", customers_unsubscribe_path %>