<div class="container">
  <div class="row">
    <h4 class="p-3">注文履歴一覧</h4>
  </div>
  <div class="row">
    <div class="col-md">
      <table class="table table-bordered">
        <thead>
          <th scope="col", style="width:15%">注文日</th>
          <th scope="col", style="width:30%">配送先</th>
          <th scope="col", style="width:15%">注文商品</td>
          <th scope="col", style="width:10%">支払金額</th>
          <th scope="col", style="width:15%">ステータス</th>
          <th scope="col", style="width:15%">注文詳細</td>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <td scope="row">
            <%= order.created_at.strftime("%Y/%m/%d") %>
          </td>
          <td scope="row">
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td scope="row", class="align-self-center">
            <% order.order_detail.each do |order_detail| %>
            <div class="col">
              <%= order_detail.item.name %>
            </div>
            <% end %>

          </td>
          <td scope="row">
            <%= order.total_payment.to_s(:delimited) %>円
          </td>
          <td scope="row">
            <%= order.status_i18n %>
          </td>
          <td scope="row">
            <%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary"  %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
 </div>
