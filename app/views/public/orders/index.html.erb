<h2>注文履歴一覧</h2>
<table>
  <thead>
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <td>
      <%= order.created_at.strftime("%Y/%m/%d") %>
    </td>
    <td>
      <%= order.postal_code %><br>
      <%= order.address %><br>
      <%= order.name %>
    </td>
    <td>
      <%# order.order_detail.each do |order_detail| %>
    </td>
    <td>
      <%= order.total_payment.to_s(:delimited) %>
    </td>
    <td>
      <%= order.payment_method_i18n %>
    </td>
    <td>
      <%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary"  %>
    </td>
  </tbody>
  <% end %>
</table>