<% total=0 %>
<table>
  <thead>
    <td>商品名</td>
    <td>単価(税込)</td>
    <td>数量</td>
    <td>小計</td>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <td>
      <%= image_tag cart_item.item.get_item_image %>
      <%= cart_item.item.name %>
    </td>
    <td>
      <%= cart_item.item.add_tax_price.to_s(:delimited) %>
    </td>
    <td>
      <%= cart_item.amount %>
    </td>
    <td>
      <%= cart_item.line_total.to_s(:delimited) %>
      <% total+=cart_item.line_total %>
    </td>
  </tbody>
  <% end %>
</table>

<p>送料</p>
  <%= @order.shipping_cost %>


<p>合計金額</p>
  <%= (total+@order.shipping_cost).to_s(:delimited) %>


<p>支払方法</p>
  <%= @order.payment_method_i18n %>

<p>お届け先</p>
  <%= @order.postal_code %><%= @order.address %></br>
  <%= @order.name %>

<%= form_with model: @order_sending, url: orders_path do |f| %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
  <%= f.hidden_field :total_payment, :value => total+@order.shipping_cost %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
<div>
  <%= f.submit '注文' %>
</div>
<% end %>