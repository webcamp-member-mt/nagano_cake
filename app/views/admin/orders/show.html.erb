<h2>注文履歴詳細</h2>

<div>
  <p>購入者：<%= @customer_show.last_name %><%= @customer_show.first_name %></p>
  <p>注文日：<%= @order_show.created_at %></p>
  <p>発送先：<%= @order_show.postal_code %><%= @order_show.address %></p>
  <%= @order_show.name %>
  <p>支払方法：<%= @order_show.payment_method %></p>

  <%= form_with model: @order_show, url: admin_item_path do |f| %>
    <p>注文ステータス：<%= @order_show.status %></p>
    <%= f.select :status, [["選択肢１",0], ["選択肢２",1], ["選択肢２",2], ["選択肢２",3], ["選択肢２",4]] %>
    <%= link_to "編集する", admin_order_path(@order_show)  %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <%# @order_detail.each do |order_detail| %>
      <td>
        <%#= order_detail.name %>
      </td>
      <td>
        <%#= item.name %>
      </td>
      <td>
        <%#= item.price %>
      </td>
      <td>
        <%#= item.is_active %>
      </td>
    <%# end %>
    </tr>
  </tbody>
</table>
