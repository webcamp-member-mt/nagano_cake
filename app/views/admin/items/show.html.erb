<div class="container">
  <div class="row">
    <h4 class="p-3">商品詳細</h4>
  </div>
  <div class="py-6 row">
    <div class="col-md-3 offset-md-1 align-self-center">
      <%= image_tag @item_show.get_item_image %>
    </div>
    <div class="col-md-5 align-self-center">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td scope="row", style="width:40%">
              商品名
            </td>
            <td>
              <%= @item_show.name %>
            </td>
          </tr>
          <tr>
            <td>
              商品説明
            </td>
            <td>
              <%= @item_show.introduction %>
            </td>
          </tr>
          <tr>
            <td>
              税抜価格
            </td>
            <td>
              <%= @item_show.add_tax_price.to_s(:delimited) %>(<%= @item_show.price.to_s(:delimited) %>)円
            </td>
          </tr>
          <tr>
            <td>
              販売ステータス
            </td>
            <% if @item_show.is_active == true %>
              <th scope="row", class="text-success">販売中</th>
            <% else %>
              <th scope="row", class="text-muted">販売停止中</th>
            <% end %>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row  justify-content-center">
    <div class="col-auto ">
      <%= link_to "編集する", edit_admin_item_path(@item_show), class: "btn btn btn-success px-5 py-2"  %>
    </div>
  </div>
</div>



