<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<h2>商品一覧</h2>

<table>
  <thead>
    <tr>
      <th>商品id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <!--<th>ジャンル</th>-->
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @items_index.each do |item| %>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <!--<td>-->
      <!--  <%#= item.genre_id %>-->
      <!--</td>-->
      <td>
        <%= item.is_active %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>
