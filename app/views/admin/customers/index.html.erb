<div class="container">
  <div class="row">
    <h4>会員一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers_index.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true %>
                <th class="text-muted">退会</th>
              <% else %>
                <th class="text-success">有効</th>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
   <div class="d-flex justify-content-center">
   <%= paginate @customers_index %>
  </div>
</div>
