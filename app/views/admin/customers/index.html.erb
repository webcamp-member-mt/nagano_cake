<h1>Admin::Customers#index</h1>
<p>Find me in app/views/admin/customers/index.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>会員一覧</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers_index.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name %>
                  <%= customer.last_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.is_deleteds %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
