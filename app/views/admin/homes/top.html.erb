<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <% @orders_index.each do |order| %>
      <td>
        <%= link_to admin_order_path(order) do %>
          <%= order.created_at %>
        <% end %>
      </td>
      <td>
        <%= order.customer.last_name %>
        <%= order.customer.first_name %>
      </td>
      <td>
        <!--注文個数-->
      </td>
      <td>
        <%= order.status %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>
